<script>

    $('#addaccount').on('click', function () {

        var model = {};
        model = {
            Email: $("#email").val(),
            Password: $("#password").val(),
            Name: $("#name").val(),
            Surname: $("#surname").val(),

        }

        $.ajax({
            url: "/Account/Register",
            type: 'post',
            data: { user: model },

            
            success: function (response) {
                if (response == 1) {

                    alert("Kullanıcı Ekleme işlemi başarılı.");
                    setTimeout(yonlendir, 3000);
                }
                else {
                    alert("Kullanıcı ekleme işleminde hata oluştu! Bu mail adresi ile kayıt vardır.");
                }


            },
            error: function (errMsg) {

              
                return false;
            }
        });

    });
    function yonlendir() {
        window.location.href = "/account/login";
    }
</script>