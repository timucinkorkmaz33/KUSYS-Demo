                                            <label for="yourPassword" class="form-label">Şifre</label>
                                        <input type="password" name="password" class="form-control" id="password" placeholder="Şifreniz" required>
                                            <div class="invalid-feedback">Lütfen şifrenizi giriniz</div>
                                        </div>


                                        <div class="col-12">
                                            <a class="btn btn-primary w-100" id="addaccount" style="color:white" type="submit">Hesap Oluştur</a>
                                        </div>
</form>
                             

